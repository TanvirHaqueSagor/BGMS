 <div class="form-v8">
	<div class="page-content">
		<div class="form-v8-content">
			<div class="form-left">
               
			</div>
			<div class="form-right">
				 <%= render './layouts/menu' %> 
				<h1 class="text-center"> 美少女情報　照会画面</h1>
				<hr class="half-rule"/>
				<br>
                <%= form_with scope: :user, url: registration_saveinfo_path,    local: true, class: "form-detail" do |form| %>
				 <div class="tabcontent" id="sign-up">
 					 <div class="form-row">
					  	<div class="form-group col-md-5">
							<div class="row no-gutters">
								<div class="col-3  labelmargin">
									<label for="registrationNo">登録No.</label> 
								</div>
								<div class="col-9 "> 
									 <%= form.text_field :registrationNo, placeholder: "1234567",  class: 'form-control'  , readonly: true %>
								</div>
							</div>
							<div class="row no-gutters">
								<div class="col-3 labelmargin">
									<label for="kanjiName">名前(漢字) </label> 
								</div>
								<div class="col-9"> 
									<%= form.text_field :kanjiName, placeholder: "河合　衣代奈",maxlength: "30",  class: 'form-control', readonly: true  %>
								</div>
							</div>
							<div class="row no-gutters">
								<div class="col-3 labelmargin">
									<label for="kanaName">名前(かな)</label> 
								</div>
								<div class="col-9">
									<%= form.text_field :kanaName, placeholder: "かわい　いよな",maxlength: "50",  class: 'form-control', readonly: true   %> 
								</div>
							</div>
							<div class="row no-gutters">
								<div class="col-3 labelmargin">
									<label for="dateOfBirth">生年月日</label> 
								</div>
								<div class="col-9">
									<%= form.text_field :dateOfBirth,   class: 'form-control',  readonly: true   %> 
	 							</div>
							</div>
							<div class="row no-gutters">
								<div class="col-3 labelmargin">
									<label for="birthPlace">出身地</label> 
								</div>
								<div class="col-9">  
									<%= form.text_field :birthPlace,   class: 'form-control',   readonly: true %> 
 								</div>
							</div>
							<div class="row no-gutters">
								<div class="col-3 labelmargin">
									<label for="height">身長(cm)</label> 
								</div>
								<div class="col-9">
									<%= form.text_field  :height ,     class: 'form-control' , readonly: true  %>  
								</div>
							</div>
							<div class="row no-gutters">
								<div class="col-3 labelmargin">
									<label for="weight">体重(kg)</label> 
								</div>
								<div class="col-9"> 
									<%= form.text_field  :weight ,   class: 'form-control' , readonly: true  %>  
								</div>
							</div>

						</div> 
 					   <div class="form-group col-md-7">
 					      <div class="container-fluid p-0"> 
							    <div class="form-group">
									<div style="height: 150px; width: 180px; padding-left: 15px;">
                                            <% if @user.image.attached? %> 
                                                <%= image_tag @user.image , class: "img-fluid img-thumbnail", :size => "350x300" %>
                                            <% end %>
									</div>
							    </div> 
						  </div>
 					    </div> 
						<div class="form-row">
						    <div class="form-group col-md-5">
								<div class="row no-gutters">
									<div class="col-3 labelmargin">
										<label for="specialSkill">特技</label> 
									</div>
									<div class="col-9 ">
									<%= form.text_field :specialSkill, placeholder: "音楽家", maxlength: "200" , class: 'form-control' , readonly: true  %>  
									</div>
								</div>

								<div class="row no-gutters">
									<div class="col-3 labelmargin">
										<label for="hobby">趣味</label> 
									</div>
									<div class="col-9"> 
										<%= form.text_field :hobby, placeholder: "本日を読むこと", maxlength: "200" ,  class: 'form-control', readonly: true   %>  
									</div>
								</div>
							</div>
							<div class="form-group col-md-7">
								<div class="row no-gutters">
									<div class="col-3 labelmargin">
										<label for="charmPoint">チャームポイント</label> 
									</div>
									<div class="col-9 "> 
										<%= form.text_field :charmPoint, placeholder: "濃いまゆげ", maxlength: "200" ,  class: 'form-control', readonly: true   %>  
									</div>
								</div>
								 
								<div class="row no-gutters">
									<div class="col-3 labelmargin">
										<label for="holidyTimeSpand">休日の過ごし方</label> 
									</div>
									<div class="col-9">
										 <%= form.text_field :holidyTimeSpand, placeholder: "読書しながら紅茶を味わう", maxlength: "200" ,  class: 'form-control' , readonly: true  %>   
									</div>
								</div>
							</div>
						</div>
						 
						<div class="form-row">
							<div class="form-group col-md-9">  
								<label for="appealPoint">アピールポイント</label> 
								<%= form.text_area :appealPoint, cols: "30", rows: "6", id: 'appealPoint', maxlength: "1000" , class: 'form-control',style: "min-width: 100%; background: #85929E; color: white;", readonly: true %>
							</div>  
							<div class="form-group col-md-2"> 
								<label for="scoreText" id="scoreTextlabel" style="padding-left: 20%;" >採点</label> 
								<div class="score">
									<h1 id='scoreText'> <%= @user.score %></h1>
								</div>  
							</div>  
							<div class="form-group col-md-1 scoremark"> 
								<label for="scoreText" id="scoreTextMark"></label> 
							</div>
						</div>
						 <div class="form-row">
							<div class="form-row-last" style="padding-left: 80%;"> 
								<%if current_user.auth_type.eql? '管理者'%>
                        	     <%= link_to '変更',{ action: "update" , :registrationNo => @user.registrationNo}, :class => "btn btn-primary" %> 
                        	     <%# <%= link_to '削除',{ action: "delete", :registrationNo => @user.registrationNo}, :data => {:confirm => '美少女情報を削除しますか？'} , :class => "btn btn-danger" %>  
								 <button type="button" class="btn btn-danger"  data-toggle="modal" data-target="#exampleModal"> 削除</button>
								 <%end%>
                        	     <%# <%= link_to '戻る',{ action: "back" }, :class => "btn btn-warning" %>   
                        	     <%= link_to '戻る',{ action: session[:action] , controller: session[:controller] }, :class => "btn btn-warning" %> 
	
					    	</div>
							<!-- Modal -->
							<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
							    <div class="modal-dialog" role="document">
							        <div class="modal-content">
							            <div class="modal-header">
							              <h5 class="modal-title" id="exampleModalLabel" style="color: black;">削除確認</h5>
							              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
							              <span aria-hidden="true">&times;</span>
							              </button>
							            </div>
							            <div class="modal-body" style="color: black;">
							              美少女情報を削除しますか？
							            </div>
							            <!-- Delete button in the footer -->
							            <div class="modal-footer">
							              <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
							              <%# <%= link_to 'Delete', article, method: :delete, class: 'btn btn-outline-danger' %>
							               <%= link_to '削除',{ action: "delete", :registrationNo => @user.registrationNo}, :class => "btn btn-outline-danger" %>  
							            </div>
							    	</div>
							    </div>
							</div>
						</div>
					</div>
				<% end %>
				 
			</div>
		</div>
	</div>
	<script type="text/javascript"> 
	</script>
</div> 
 